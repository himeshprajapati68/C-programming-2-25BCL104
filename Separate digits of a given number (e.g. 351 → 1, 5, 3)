#include <stdio.h>

int main() {
    int num;

    printf("Enter a number: ");
    scanf("%d", &num);

    printf("Digits in reverse order: ");
    
    while(num > 0) {
        printf("%d ", num % 10);  // Extract last digit
        num = num / 10;           // Remove last digit
    }

    printf("\n");

    return 0;
}
