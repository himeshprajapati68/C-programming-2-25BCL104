#include <stdio.h>

int main() {
    int i, n;
    float num, sum = 0.0, mean;

    printf("Enter the number of values: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        printf("Enter value %d: ", i);
        scanf("%f", &num);
        sum += num;  // Add each number to sum
    }

    mean = sum / n;  // Calculate mean

    printf("Sum of the %d numbers is: %.2f\n", n, sum);
    printf("Mean of the %d numbers is: %.2f\n", n, mean);

    return 0;
}
