#include <stdio.h>

int main() {
    int num, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    if(num == 0) {
        count = 1;  // 0 has 1 digit
    } else {
        if(num < 0) {
            num = -num;  // Make number positive
        }
        while(num > 0) {
            num = num / 10;  // Remove last digit
            count++;         // Increment count
        }
    }

    printf("Number of digits: %d\n", count);

    return 0;
}
