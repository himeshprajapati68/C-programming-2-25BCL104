#include <stdio.h>

int main() {
    int num, sum = 0, digit;

    printf("Enter a number: ");
    scanf("%d", &num);

    if(num < 0) {
        num = -num;  // Make number positive
    }

    while(num > 0) {
        digit = num % 10;  // Extract last digit
        sum += digit;      // Add to sum
        num = num / 10;    // Remove last digit
    }

    printf("Sum of digits: %d\n", sum);

    return 0;
}
