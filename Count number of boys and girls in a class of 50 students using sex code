#include <stdio.h>

int main() {
    char sex;
    int boys = 0, girls = 0;
    int i;

    printf("Enter sex code for 50 students (M/F):\n");

    for(i = 1; i <= 50; i++) {
        printf("Student %d: ", i);
        scanf(" %c", &sex);  // Space before %c to skip newline characters

        if(sex == 'M' || sex == 'm') {
            boys++;
        } else if(sex == 'F' || sex == 'f') {
            girls++;
        } else {
            printf("Invalid input! Enter M/m or F/f.\n");
            i--;  // Repeat this iteration for valid input
        }
    }

    printf("Number of boys: %d\n", boys);
    printf("Number of girls: %d\n", girls);

    return 0;
}
